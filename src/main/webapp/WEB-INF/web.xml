<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

    <servlet>
        <servlet-name>ExamServlet</servlet-name>
        <servlet-class>controller.user.exam.ExamController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GenerateExam</servlet-name>
        <servlet-class>controller.admin.exam.GenerateExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleExamCreation1</servlet-name>
        <servlet-class>controller.exam.HandleExamCreation1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleViewAllExam</servlet-name>
        <servlet-class>controller.exam.HandleViewAllExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleUpdateAndDeleteExam</servlet-name>
        <servlet-class>controller.exam.HandleUpdateAndDeleteExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>toViewAllExam</servlet-name>
        <servlet-class>router.toViewAllExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>toAdminLogin</servlet-name>
        <servlet-class>router.toAdminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>toAdminHome</servlet-name>
        <servlet-class>router.toAdminHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExamServlet</servlet-name>
        <url-pattern>/ExamServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GenerateExam</servlet-name>
        <url-pattern>/student/GenerateExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleExamCreation1</servlet-name>
        <url-pattern>/HandleExamCreation1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleViewAllExam</servlet-name>
        <url-pattern>/HandleViewAllExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleUpdateAndDeleteExam</servlet-name>
        <url-pattern>/HandleUpdateAndDeleteExam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>toViewAllExam</servlet-name>
        <url-pattern>/viewallexam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>toAdminLogin</servlet-name>
        <url-pattern>/adminlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>toAdminHome</servlet-name>
        <url-pattern>/adminhome</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
